@{
    ViewBag.Title = "Danh sách học sinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<link href="../assets/css/style.css" rel="stylesheet">
<style>
    ul.tree > * {
        display: none;
    }

    .form-control {
        padding: 0px 12px !important;
    }

    label {
        font-weight: normal !important;
        padding-top: 12px;
    }
</style>
<div class="row">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card">
            <div class="card-block">
                <h2>Danh sách học sinh</h2>
                <table id="studentTable" class="table table-striped table-bordered" style="width: 100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã học sinh</th>
                            <th>Họ tên</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Cập nhật</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-xlg-2 col-md-4">
        <div class="card">
            <div class="card-block">
                <table>
                    <tr>
                        <th>
                            <label class="control-label text-right col-md-3">Khối</label>
                        </th>
                        <th>
                            <input id="block2" />
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label text-right col-md-3">Lớp</label>
                        </th>
                        <th>
                            <input id="grade2" />
                        </th>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</div>

<div id="window">
    <h5 class="box-title"><b>Thông tin lớp học</b></h5>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group row">
                <label class="control-label text-right  col-md-3">Họ tên</label>
                <div class="col-md-7">
                    <input id="fullName" type="text" class="form-control">
                    <small id="spfullname" class="form-control-feedback">Họ tên </small>
                </div>
            </div>
        </div>
        <!--/span-->
        <div class="col-md-5">
            <div class="form-group row ">
                <label class="control-label text-right  col-md-3">Giới tính</label>
                <div class="col-md-7">
                    <input id="gender" style="width: 100%">
                </div>
            </div>
        </div>
        <!--/span-->
    </div>

    <div class="row">

        <div class="col-md-5">
            <div id="fmaddress" class="form-group row">
                <label class="control-label text-right  col-md-3">Địa chỉ</label>
                <div class="col-md-7">
                    <input id="address" type="text" class="form-control">
                </div>
            </div>
        </div>
        <!--/span-->
        <div class="col-md-5">
            <div id="fmemail" class="form-group row">
                <label class="control-label text-right  col-md-3">Email</label>
                <div class="col-md-7">
                    <input id="email" type="text" class="form-control">
                </div>
            </div>
        </div>

        <!--/span-->
    </div>
    <!--/row-->
    <div class="row">
        <div class="col-md-5">
            <div id="fmbirthday" class="form-group row">
                <label class="control-label text-right col-md-3">Ngày sinh</label>
                <div class="col-md-7">
                    <input type="text" id="birthDay" style="width: 100%">
                </div>
            </div>
        </div>
        <!--/span-->
        <div class="col-md-5">
            <div class="form-group has-error row ">
                <label class="control-label text-right col-md-3">Điện thoại</label>
                <div class="col-md-7">
                    <input id="note" type="text" class="form-control">
                </div>
            </div>
        </div>
        <!--/span-->
    </div>

    <h5 class="box-title"><b>Thông tin lớp học</b></h5>
    <hr class="m-t-0 m-b-40">
    <!--/row-->
    <div class="row">
        <div class="col-md-5">
            <div id="fmblock" class="form-group row">
                <label class="control-label text-right col-md-3">Khối</label>
                <div class="col-md-7">
                    <input id="block" type="text" style="width: 100%">
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div id="fmgrade" class="form-group row">
                <label class="control-label text-right col-md-3">Lớp</label>
                <div class="col-md-7">
                    <input id="grade" style="width: 100%">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group row">
                <label class="control-label text-right col-md-3">Mã HS</label>
                <div class="col-md-7">
                    <input id="idstudent" type="text" class="form-control" disabled>
                </div>
            </div>
        </div>
        <!--/span-->
        <div class="col-md-5">
            <div class="form-group row">
                <label class="control-label text-right col-md-3">State</label>
                <div class="col-md-7">
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <!--/span-->
    </div>
</div>

<script src="~/Scripts/Students/Students.js"></script>
<script crossorigin="anonymous" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script>
    $(document).ready(function () {
        $("#block2").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            index: 1,
            change: loadClass2,
            showSelectAll: true
        });
        $("#grade2").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            index: 1,
            showSelectAll: true
        });
        $.ajax({
            type: "GET",
            url: '/Classes/getClassLevel2',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var ddl = $('#block2').data("kendoDropDownList");
                ddl.setDataSource(data);
                ddl.refresh();
                ddl.select(0);
                ddl.trigger("change");
            },
            error: function (xhr, status, error) {
                alert('err or seleccct 2222:');
            }
        });


        var myWindow = $("#window");


        myWindow.kendoWindow({
            width: "800px",
            height: "500px",
            title: "Cập nhật thông tin học sinh",
            visible: false,
            actions: [
                "Pin",
                "Minimize",
                "Maximize",
                "Close"
            ],
        }).data("kendoWindow")
    })
</script>
