@{
    ViewBag.Title = "Quản lý lớp học";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "Quản lý lớp học";
}
<style>
    .modal-dialog {
        max-width: 500px !important;
    }

    .form-horizontal label {
        margin-top: 8px !important;
    }

    .badge {
        font-size: 100% !important;
    }
</style>


<div class="row">
    <button class="btn pull-left hidden-sm-down btn-success" data-toggle="modal" data-target="#ModelAddClass" style="margin-left: 15px;">
        <i class="fa fa-plus"></i> Thêm lớp học
    </button>

</div>

<div class="row" style="    margin-top: 10px;">
    <div class="col-12">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Thông tin lớp học</h4>
            </div>
            <div class="card-block">
                <form action="form-layout.html#" class="form-horizontal">
                    <div class="form-body">
                        <hr class="m-t-0 m-b-40">
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-3">
                                <div id="fmblock" class="form-group row">
                                    <label class="control-label text-right col-md-3">Khối</label>
                                    <div class="col-md-9">
                                        <select id="block" data-style="form-control btn-secondary"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fmgrade" class="form-group row">
                                    <label class="control-label text-right col-md-3">Lớp</label>
                                    <div class="col-md-9">
                                        <select id="grade" data-style="form-control btn-secondary"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fmgrade" class="form-group row">
                                    <label class="control-label text-right col-md-4">Sĩ số:</label>
                                    <div class="col-md-8" style="padding-top: 8px;">
                                        <span id="total" class="badge badge-success"> </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fmgrade" class="form-group row">
                                    <div class="col-md-9">
                                        <button type="button" onclick="ViewListStudent()" class="btn btn-primary">
                                            <i class="fa fa-search" aria-hidden="true"></i>
                                            Xem danh sách
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <table id="classtable" class="table table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã học sinh</th>
                                    <th>Họ tên</th>
                                    <th>Giới tính</th>
                                    <th>Ngày sinh</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Cập nhật</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
        <div class="modal-dialog" role="document">
            <div class="modal-content card card-outline-primary">
                <div class="modal-header card-header">
                    <h4 class="modal-title" id="exampleModalLabel1" style="color:white">Cập nhật thông tin</h4>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                </div>
                <div class="modal-body">
                    <form>

                        <div class="col-md-12">
                            <div id="fmfullname" class="form-group row">
                                <label class="control-label text-right  col-md-3">Họ tên</label>
                                <div class="col-md-9">
                                    <input id="fullName" type="text" class="form-control">
                                    <input id="sid" type="hidden" />
                                    <small id="spfullname" class="form-control-feedback">Họ tên không được để trống </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="control-label text-right  col-md-3">Giới tính</label>
                                <div class="col-md-9">
                                    @*<input id="gender" type="text" class="form-control">*@
                                    <select id="gender" class="selectpicker" data-style="form-control btn-secondary">
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div id="fmbirthday" class="form-group row">
                                <label class="control-label text-right  col-md-3">Ngày sinh</label>
                                <div class="col-md-9">
                                    @*<input id="fullName" type="text" class="form-control">*@
                                    <input type="text" id="birthDay" class="form-control" placeholder="mm/dd/yyyy">
                                    <small id="spbirthday" class="form-control-feedback">Ngày sinh không hợp lệ </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12" >
                            <div class="form-group row" id="fmaddress">
                                <label class="control-label text-right  col-md-3">Địa chỉ</label>
                                <div class="col-md-9">
                                    <input id="address" type="text" class="form-control">
                                    <small id="spaddress" class="form-control-feedback">Địa chỉ không được để trống. </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="control-label text-right  col-md-3">Lớp</label>
                                <div class="col-md-9">
                                    <select id="grade2" data-style="form-control btn-secondary"></select>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="closeModifyStudent()">Đóng</button>
                    <button type="button" class="btn btn-primary"  onclick="updateinfo()">
                    <i class="fa fa-edit" style="font-size:16px"></i>Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="col-md-12">
    <div class="card">
        <div class="card-block">

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel1">Cập nhật thông tin môn học</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <form>

                                <div class="col-md-12">
                                    <div  class="form-group row">
                                        <label class="control-label text-right  col-md-4">Mã môn học</label>
                                        <div class="col-md-8">
                                            <input id="subjectid" type="text" class="form-control" disabled>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div id="fmsubjectname"  class="form-group row">
                                        <label class="control-label text-right  col-md-4">Tên môn học</label>
                                        <div class="col-md-8">
                                            <input id="subjectname" type="text" class="form-control">
                                            <small id="spsubjectname" class="form-control-feedback">Tên môn học không được để trống </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div id="fmsubjectperiod"   class="form-group row">
                                        <label class="control-label text-right  col-md-4">Số tiết</label>
                                        <div class="col-md-8">
                                            <input id="subjectperiod" type="text" class="form-control">
                                            <small id="spsubjectperiod" class="form-control-feedback">Tên môn học không được để trống </small>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div id="fmsubjecttype" class="form-group row">
                                        <label class="control-label text-right  col-md-4">Hệ số</label>
                                        <div class="col-md-8">
                                            <input id="subjecttype" type="text" class="form-control">
                                            <small id="spsubjecttype" class="form-control-feedback">Tên môn học không được để trống </small>

                                        </div>
                                    </div>
                                </div>


                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" onclick="btnclose()" class="btn btn-default">Đóng</button>
                            <button type="button" class="btn btn-primary" onclick="updateinfosubject()">
                            <i class="fa fa-edit" style="font-size:16px"></i>Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal -->

            <div class="modal fade" id="ModelAddClass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                <div class="modal-dialog" role="document">
                    <div class="modal-content card card-outline-success">
                        <div class="modal-header card-header">
                            <h4 class="modal-title" id="exampleModalLabel1" style="color:white">Thêm lớp học</h4>
                             </div>
                        <div class="modal-body">
                            <form>

                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <label class="control-label text-right  col-md-4">Khối</label>
                                        <div class="col-md-8">
                                            <select id="block2" data-style="form-control btn-secondary"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div id="fmclassname" class="form-group row">
                                        <label class="control-label text-right  col-md-4">Tên lớp</label>
                                        <div class="col-md-8">
                                            <input id="classnameadd" type="text" class="form-control">
                                            <small id="spclassname" class="form-control-feedback">Tên lớp không được để trống</small>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" onclick="closeAddClass()">Đóng</button>
                            <button type="button" class="btn btn-primary" onclick="addclass()">
                            <i class="fa fa-edit" style="font-size:16px"></i>
                            Thêm
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/Classes/Classes.js"></script>
<script>
    $(document).ready(function () {
        $('#grade2').selectpicker();
        $('#birthDay').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'dd/mm/yyyy'
        });

        $.ajax({
            type: "GET",
            url: '/Classes/getClassByLevel',
            contentType: "application/json; charset=utf-8",
            data: { idLevel: 0 },
            dataType: "json",
            async: false,
            success: function (data) {
                //$('#grade').find('option').remove().end();
                var jsonData = JSON.stringify(data);
                $.each(JSON.parse(jsonData), function (idx, obj) {
                    $("#grade2").append('<option value="' + obj.value + '">' + obj.text + '</option>').selectpicker('refresh');
                });
            },
            error: function (xhr, status, error) {
                alert('Error789:');
            }
        });
    })


</script>
